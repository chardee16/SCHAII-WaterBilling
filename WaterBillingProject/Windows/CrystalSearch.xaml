<Window x:Class="WaterBilling.Windows.CrystalSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterBilling.Windows"
        mc:Ignorable="d"
        Title="Search" Height="120" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  ShowInTaskbar="False">
    <Grid>
        <Label x:Name="label" Content="Enter text to search:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="149"/>
        <TextBox x:Name="searchText" HorizontalAlignment="Left" Height="20" Margin="10,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="260"/>
        <Button x:Name="searchText1" Content="OK" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="searchText1_Click"/>
        <Button x:Name="cancelSearch" Content="Cancel" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.467,-0.35" HorizontalAlignment="Right" Click="cancelSearch_Click"/>

    </Grid>
</Window>
